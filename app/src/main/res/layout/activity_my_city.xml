<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="40dp"
        android:paddingTop="15dp"
        android:paddingLeft="13dp"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/back_64_white"
            android:id="@+id/image_view_my_city_back"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="我的城市"
            android:textColor="#ffffff"
            android:textSize="18sp"
            />

    </LinearLayout>

<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:id="@+id/recycler_view_my_city"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#30ffffff"
        android:text="长按可删除城市"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/text_view_my_city_add_city"
         android:text="添加城市"
         android:layout_centerInParent="true"
         android:textColor="#ffffff"
         android:textSize="14sp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/image_view_my_city_add_city"
            android:src="@drawable/add_128_white_img"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/text_view_my_city_add_city"
            android:layout_toStartOf="@+id/text_view_my_city_add_city" />
    </RelativeLayout>



</LinearLayout>
